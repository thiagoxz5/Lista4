#include <stdio.h>

double serie(int i);
double soma = 0;
int main(void) {
  // iniciar variavel
  int n;

  // pegar nuemero com usuario
  do {
    printf("Digite o valor de N maior que 0: ");
    scanf("%d", &n);
  } while (n <= 0);


  // realizar a soma da formula
  for (int i = 1; i <= n; i++) {
  soma += serie(i);
}
  
  // chamar função e imprimir resultado
  printf("%lf", soma);

  return 0;
}

double serie(int i) {
  
  // calcular 1/i!
  if (i == 1) {
    return 1;
  } else {
    return 1 / (i * serie(i - 1));
  }
}
